generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Tip {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  userId    String
  attachmentFileUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tips")
}

model Admission {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  School          String
  Program         String
  Average         Float
  Decision        String?
  OUACCode        String?
  ApplicationDate String?
  DecisionDate    String?
  Group           String?   // "A" or "B" for OUAC groups
  Citizenship     String?
  Province        String?
  HasSuppApp      Boolean?
  SuppAppInfo     String?
  Comments        String?
  Scholarship     Int?

  @@map("applicants_data")
}




